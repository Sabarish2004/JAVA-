import java.util.*;
public class Main
{
	public static void main(String[] args) {
		String a = "aaabbbbccccaa";
		String b = "";
		int cnt = 1;
		for(int i=0;i<a.length;i++)
		{
		    if((i+1)<a.length() && a.CharAt(i)==a.CharAt(i+1))
		    {
		      cnt= cnt+1;
		    }
		    else{
		        b=b+a.CharAt(i);
		        b=b+cnt;
		        cnt=1;
		    }
		    System.out.print(b);
		}
	}
}
